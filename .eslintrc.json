{
  "extends": [
    "next/core-web-vitals",
    "plugin:prettier/recommended",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["prettier", "@typescript-eslint"],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "node_modules/*",
    ".next/*",
    ".out/*",
    "!.prettierrc.js",
    "*.config.js",
    "*.config.ts",
    ".*",
    "*.json",
    "README.md",
    "*.lock",
    "src/assets/*",
    "**/**/*.css"
  ],
  "rules": {
    "prettier/prettier": "error",
    "camelcase": "error",
    "no-duplicate-imports": "error",
    "no-unused-vars": 2
  }
}
